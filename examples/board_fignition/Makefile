target=	FIGsimavr
#firm_src = ${wildcard at*${board}.c}
#firmware = ${firm_src:.c=.axf}

#simavr = ../simavr
simavr = ../../

IPATH = .
IPATH += ../parts
IPATH += ${simavr}/include
IPATH += ${simavr}/simavr/sim

VPATH = .
VPATH += ../parts

CFLAGS += -DCONFIG_SIMAVR_FAST_CORE
CFLAGS += -DCONFIG_SIMAVR_FAST_CORE_GLOBAL_PIGGYBACKED

# added for fast core local include
CFLAGS += -O3 -Wall -fomit-frame-pointer
CFLAGS += -march=native
CFLAGS += -m32 -mfpmath=sse -mmmx -msse

# original CFLAGS line
CFLAGS += -g

LDFLAGS += -lpthread
LDFLAGS += -lSDL

#include ${simavr}../Makefile.opengl

all: obj ${firmware} ${target}

include ${simavr}/Makefile.common

board = ${OBJ}/${target}.elf

${board} : ${OBJ}/sim_fast_core.o
${board} : ${OBJ}/${target}.o

${target}: ${board}
	@echo $@ done

run: ${OBJ}/${target}.elf
	${OBJ}/${target}.elf

clean: clean-${OBJ}
	rm -rf *.a *.axf ${target} *.vcd

